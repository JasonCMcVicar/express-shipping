{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://acme.best.ham.company.com/shipmentSchema.json",
    "title": "Shipments",
    "description": "JSON Shipment info sent to Ship-It",
    "type": "object",
    "properties": {
      "productId": {"type": "integer",
                    "minimum": 1000},
      "name": {"type": "string"},
      "addr": {"type": "string"},
      "zip": {"type": "string"}
    },
    "additionalProperties": false,
    "required": [
      "productId",
      "name",
      "addr",
      "zip"
    ]
  }
